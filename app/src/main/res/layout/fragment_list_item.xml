<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:layout_marginLeft="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/restaurant_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_toEndOf="@+id/restaurant_name" />

    <TextView
        android:id="@+id/restaurant_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restaurant_name"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="-35dp"
        android:text="Test" />

    <TextView
        android:id="@+id/restaurant_adress"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/restaurant_hours"
        android:text="Test" />


    <ImageView
        android:id="@+id/restaurant_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/restaurant_distance"
        android:layout_marginStart="25dp"/>

</RelativeLayout>